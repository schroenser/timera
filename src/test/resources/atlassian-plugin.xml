<atlassian-plugin name="${project.name}" key="${project.groupId}.${project.artifactId}-tests" plugins-version="2">
    <component-import interface="de.schroenser.timera.api.MyPluginComponent" key="myComponent" />

    <!-- from our base plugin -->
    <component-import interface="com.atlassian.sal.api.ApplicationProperties" key="applicationProperties" />

    <!-- from the product container -->
    <plugin-info>
        <description>${project.description}</description>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <version>${project.version}</version>
    </plugin-info>

</atlassian-plugin>
